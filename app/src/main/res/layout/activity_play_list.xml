<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5D3DFF"
    tools:context=".activity.PlayList.PlayListActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_marginTop="5dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="歌单漫游"
            android:textSize="25dp"
            android:textColor="@color/white">

        </TextView>
    </androidx.appcompat.widget.Toolbar>


    <cjk.design.music.activity.PlayList.NestedScrollingParent2PlayListLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sick_layout"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="110dp"
        android:paddingTop="100dp"
        android:background="@drawable/recommendation_linearlayout_corner">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="歌单标题"
                android:id="@+id/playlist_name"
                android:gravity="center">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="歌单描述"
                android:id="@+id/playlist_description"
                android:gravity="center"
                android:maxLines="15"
                android:ellipsize="end">

            </TextView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_buttonstart_corner"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:id="@+id/playlist_start">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/guidePoint"
                android:layout_marginRight="5dp"
                android:background="@mipmap/button_start">
            </ImageView>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:id="@+id/guidePoint">

            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/guidePoint"
                android:text="播放"
                android:textSize="18dp"
                android:textColor="@color/white">

            </TextView>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/palylist_recycle">

        </androidx.recyclerview.widget.RecyclerView>

    </cjk.design.music.activity.PlayList.NestedScrollingParent2PlayListLayout>

    <ImageView
        android:id="@+id/playlist_cover"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY">

    </ImageView>
</RelativeLayout>