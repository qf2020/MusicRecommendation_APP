<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/forget_1_tb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget_1_tb"
        android:id="@+id/forget_icon_ll_1"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/forget_icon_ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/forget_ll">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:id="@+id/forget_has_send"
            android:text="验证码已发送至"
            android:textColor="@color/black">

        </TextView>


        <EditText
            android:id="@+id/main_btn_forget_text_1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/forget_has_send"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="#00000000"
            android:hint="请输入短信中的验证码"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_height="2px"
            android:layout_below="@+id/main_btn_forget_text_1"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/colorAccent" />

        <cjk.design.music.activity.signup.CountDownView
            android:id="@+id/forget_btn_get_sms_code_cd"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/main_btn_forget_text_1"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"

            android:gravity="center"
            android:minWidth="70dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="获取验证码"
            android:textColor="@color/accord"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/forget_code"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/forget_btn_get_sms_code_cd"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_bg_selector"
            android:gravity="center"
            android:paddingLeft="15dip"
            android:paddingTop="2dip"
            android:paddingRight="15dip"
            android:paddingBottom="2dip"
            android:text="提交验证码"
            android:textColor="@drawable/btn_text_selector"
            android:textSize="20sp" />
    </RelativeLayout>



</RelativeLayout>