<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26A69A">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/recommendation_second_Coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >
        <!--CoordinatorLayout 作为顶层布局来协调子布局 -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/recommendation_second_appbar"
            android:layout_width="match_parent"
            android:layout_height="412dp"
            android:background="#26A69A"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true">
            <!--AppbarLayout是一种支持响应滚动手势的app bar布局,-->
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/recommendation_second_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:fitsSystemWindows="true"
                app:contentScrim="#26A69A"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="64dp"
                app:maxLines="2"
                >
                <!--
                CollapsingToolbarLayout则是专门用来实现子布局内不同元素响应滚动细节的布局.

                scroll ，滚动。所有的Flag都要设置这个值，设置了之后可以向上滚动出屏幕。
                exitUntilCollapsed ，向上滑动时，所有组件都会滚出屏幕，但Toolbar除外。

                fitsSystemWindows 根据窗口大小调整布局
                contentScrim 收缩后文本的颜色
                expandedTitleMarginStart未收缩文本离左边的边距
                expandedTitleMarginEnd 收缩后文本离左边的边距
                -->
                <ImageView
                    android:id="@+id/recommendation_second_bg"
                    android:layout_width="304dp"
                    android:layout_height="293dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/recommendation_second_bg"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />
                <!--  scaleType等比缩放居中显示-->

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/recommendation_second_tb"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin" />
                <!-- layout_collapseMode 中 parallax随着页面滚动而滚动  pin随着滚动固定在最上方-->

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/recommendation_linearlayout_corner"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingTop="20dp">




            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                android:id="@+id/recommendation_second_recycle">
                <!--上面的作用还未探索-->
            </androidx.recyclerview.widget.RecyclerView>



        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>




</RelativeLayout>
